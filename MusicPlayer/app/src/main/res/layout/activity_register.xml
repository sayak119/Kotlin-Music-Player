<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad8"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Your Account Here"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:id="@+id/registerhead"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_margin="20dp"/>

    <EditText
        android:layout_below="@+id/registerhead"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phoneentry"

        android:background="@drawable/input_design"
        android:padding="20dp"
        android:hint="enter your phone number.."
        android:maxLength="10"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameentry"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:hint="enter your name.."
        android:layout_below="@+id/phoneentry"
        android:textColorHint="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameentry"
        android:id="@+id/passwordentry"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:hint="enter your password.."
        android:textColorHint="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerNowbtn"
        android:layout_below="@+id/passwordentry"
        android:text="Register Now"
        android:background="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"/>
</RelativeLayout>