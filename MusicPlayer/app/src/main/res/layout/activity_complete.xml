<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad8"
    android:id="@+id/completelayout"
    tools:context=".Complete">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for purchase tokens
use tokens to unlock new songs.."
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/h1"
        android:padding="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/h2"
        android:layout_below="@+id/h1"
        android:text="Click here"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/completemyplayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Player"
        android:background="@android:color/white"
        android:layout_below="@+id/h2"
        android:padding="20dp"
        android:layout_margin="20dp"/>
</RelativeLayout>